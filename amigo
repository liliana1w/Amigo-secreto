// CÃ³digo mejorado
let listaNombres = [];
let amigoSecreto = "";

function agregarNombre() {
  let nombre = document.getElementById("nombre").value;
  if (nombre.trim() !== "") {
    listaNombres.push(nombre);
    document.getElementById("listaNombres").innerHTML += `<li>${nombre}</li>`;
    document.getElementById("nombre").value = "";
  }
}

function sortearAmigoSecreto() {
  if (listaNombres.length > 1) {
    let indiceAmigoSecreto = Math.floor(Math.random() * listaNombres.length);
    amigoSecreto = listaNombres[indiceAmigoSecreto];
    document.getElementById("amigoSecreto").innerHTML = amigoSecreto;
  } else {
    alert("Necesitas agregar al menos 2 nombres para realizar el sorteo.");
  }
}

function reiniciarSorteo() {
  listaNombres = [];
  document.getElementById("listaNombres").innerHTML = "";
  document.getElementById("amigoSecreto").innerHTML = "";
}

// Comandos
document.getElementById("agregarNombreBtn").addEventListener("click", agregarNombre);
document.getElementById("sortearAmigoBtn").addEventListener("click", sortearAmigoSecreto);
document.getElementById("reiniciarBtn").addEventListener("click", reiniciarSorteo);
